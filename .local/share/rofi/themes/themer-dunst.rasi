* {
	background: #282a36ea;
	foreground: #f8f8f2;
	accent: 	#d6acffea;

	transparent:      #FFFFFF00;
	background-color: @transparent;

	font: "IBM Plex Sans 15";
}

window {
	background-color: @background;
    height: 10%;
    width: 30%;
}

mainbox {
    border:  0;
    padding: 1%;
}

message {
    border:  0;
    padding: 0;
}

textbox {
    text-color: @foreground;
}

listview {
    scrollbar: true;
	columns:   1;
    padding: 2% 0;
}

element {
    border:  0;
}

element-icon {
    size: 2em;
}

element-text {
    background-color: inherit;
    text-color:       inherit;
}

element.normal.normal, element.normal.urgent, element.normal.active {
    background-color: @transparent;
    text-color:       @foreground;
}

element.selected.normal, element.selected.urgent, element.selected.active {
    text-color:       @accent;
}

element.alternate.normal, element.alternate.urgent, element.alternate.active {
    background-color: @transparent;
    text-color:       @foreground;
}

scrollbar {
    width:        4px;
    border:       0;
    handle-width: 8px;
    padding:      0;
}

mode-switcher {
    border: 0;
}

button.selected {
    background-color: @transparent;
    text-color:       @foreground;
}

inputbar {
    text-color: @accent;
	children:   [prompt, textbox-prompt-colon, entry];
}

case-indicator {
    spacing:    0;
    text-color: @foreground;
}

entry {
    text-color: @accent;
}

prompt {
    text-color: @foreground;
}

textbox-prompt-colon {
    expand:     false;
    str:        ":";
    margin:     0px 0.3em 0em 0em;
    text-color: @foreground;
}
