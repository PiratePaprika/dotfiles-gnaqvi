#!/bin/bash

source ~/.config/color_themes/current

STATUS_LOG_FILE="/tmp/redshift/status.log"

function get_status() {
    [ -f "$STATUS_LOG_FILE" ] \
        && cat $STATUS_LOG_FILE | tr -d '\000' | grep -i status | cut -d ":" -f 2 | tr -d "[:blank:]" \
        || echo "Disabled"
}

function get_description() {
    OUTPUT_TEMPL='%{F__COLOR__} __TEMP__%{F-}'
    COLOR=$BASE02
    TEMP=$(get_status)

    if [ "$(pgrep -x redshift)" ] && [ "$TEMP" == "Enabled" ]; then
        TEMP=$(redshift -p 2> /dev/null | grep temp | cut -d ":" -f 2 | tr -dc "[:digit:]")
        
        if [ -z "$TEMP" ]; then
            COLOR=$BASE04
        elif [ "$TEMP" -ge 5000 ]; then
            COLOR=$BASE09
        elif [ "$TEMP" -ge 4000 ]; then
            COLOR=$BASE0D
        else
            COLOR=$ALERT
        fi

        TEMP=${TEMP}k
    fi

    WITH_COLOR=${OUTPUT_TEMPL/__COLOR__/$COLOR}
    WITH_TEMP=${WITH_COLOR/__TEMP__/$TEMP}

    echo $WITH_TEMP
}

function toggle() {
    if [ "$(pgrep -x redshift)" ]; then
        echo "" > $STATUS_LOG_FILE
        pkill -USR1 redshift
    else
        $HOME/.config/redshift/launch
    fi
}

[ "$#" -lt 1 ] && echo "Missing parameters." && exit 1

case $1 in
"-p") get_description ;;
"-t") toggle ;;
*) echo "Invalid parameter." && exit 1 ;;
esac